<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_degres"
            android:id="@+id/viewDegres"
            android:textColor="@color/colorPrimary"
            android:textSize="72sp" tools:layout_editor_absoluteX="128dp"
            android:layout_marginTop="96dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="@string/text_ville"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:id="@+id/viewVille"
            android:textColor="@color/colorPrimary"
            android:textSize="40sp" tools:layout_editor_absoluteX="90dp"
            android:layout_marginTop="44dp" app:layout_constraintTop_toBottomOf="@+id/viewDegres"/>
    />
    <TextView
            android:text="@string/text_meteo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/viewMeteo"
            android:textColor="@color/colorPrimary"
            android:textSize="25sp" tools:layout_editor_absoluteX="156dp" android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/viewVille"/>

</android.support.constraint.ConstraintLayout>